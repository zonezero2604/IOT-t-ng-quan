#include <stdio.h>
int uscln(int x, int y);
int bscnn(int x, int y);




int main() {


  int a,b,kiemTra;
  do {
     printf("nhap 2 so a va b \n ");
     fflush(stdout);
     kiemTra = scanf("%d %d",&a,&b);
     if (kiemTra < 1) {    // Clean the input
       while (getchar() != '\n') ;
     }
  } while(kiemTra < 1 ); // ktra nhập số nguyên nếu hàm scanf sai nó sẽ return 1 số <1


	 while(getchar() != '\n')
	 {
	//just read the input buffer and do nothing
	 }
 getchar();
   return 0;
}

int uscln(int x, int y)
{
	while(a != b)
	{
		if(a > b)
		{
			a -= b;
		}
		else
		{
			b -= a;
		}
	}
	return a;
	}

bscnn(int x, int y)
{
	int result =0;
	int max;
	if(a>b)
	{
		max = a;
	 }
	else
	{
		max = b;
	}
	for(int i=max; i <= a*b; i++ )
	{
		if(((i%a)==0) && ((i%b)==0))
			result =i;
			break;
	}
	}

