#include <stdio.h>




int main() {


  int num,kiemTra,r,sum;
  sum=0;


  do {
     printf("nhap input \n ");
     fflush(stdout);
     kiemTra = scanf("%d",&num);
     printf("kiem tra %d \n ",kiemtra);
          fflush(stdout);
//     if (kiemTra < 1) {    // Clean the input
//       while (getchar() != '\n') ;
//     }
  } while(kiemTra < 1 && num>0);

  for(; num!= 0; num=num/10)
  {
	  r = num%10;
	  sum = sum*10+r;

  }
  printf("%d \n ",sum);
       fflush(stdout);


	 while(getchar() != '\n')
	 {
	//just read the input buffer and do nothing
	 }
 getchar();
   return 0;
}
