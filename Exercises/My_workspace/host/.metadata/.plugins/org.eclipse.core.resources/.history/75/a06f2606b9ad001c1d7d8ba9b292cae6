#include <stdio.h>


int main ()
{

// nhập 2 số A.B là đầu cuối của một mạng
	float A,B,C;
	 printf("nhap canh A\n");
	 fflush(stdout);
	 scanf("%f",&A);
	 printf("nhap canh B\n");
	 fflush(stdout);
	 scanf("%f",&B);
	 printf("nhap canh C\n");
	 fflush(stdout);
	 scanf("%f",&C);

	 float array[3]={A,B,C};

	 if((array[0] + array[1] > array[2])&&(array[1] + array[2] > array[0])
	             &&(array[2] + array[0] > array[2])) {
	         printf("Ba canh tao thanh 1 tam giac\n");
	         fflush(stdout);

	 } else {
	         printf("Ba canh KHONG tao thanh 1 tam giac\n");
	         fflush(stdout);
	     }

	 printf("Press enter key to exit this application");
	 fflush(stdout);
	 while(getchar() != '\n')
	 {
	//just read the input buffer and do nothing
	 }
     getchar();
}
